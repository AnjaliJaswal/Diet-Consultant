<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Update Post....."
        android:textSize="24dp"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/colorAccent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Name"
        android:layout_marginTop="20dp"
        android:textSize="23dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/Fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"
        android:textSize="24dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carbohydrates (in grams)"
        android:layout_marginTop="20dp"
        android:textSize="23dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/Fc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Carbohydrates"
        android:textSize="24dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fats (in grams)"
        android:layout_marginTop="20dp"
        android:textSize="23dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/fat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fats"
        android:textSize="24dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proteins (in grams)"
        android:layout_marginTop="20dp"
        android:textSize="23dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/Fp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Proteins"
        android:textSize="24dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Can be Consumed By:"
        android:layout_marginTop="20dp"
        android:textSize="23dp"
        android:layout_marginLeft="10dp"/>
         <EditText
             android:id="@+id/ch1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Under Weight,Healthy,OverWeight"
             android:textSize="24dp"
             android:textColor="#000000"
             android:textStyle="bold"
             android:layout_marginTop="7dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"

         />


         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Can be Consumed For:"
             android:layout_marginTop="20dp"
             android:textSize="23dp"
             android:layout_marginLeft="10dp"/>
         <EditText
             android:id="@+id/ch2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="BreakFast,Lunch,Snacks,Dinner"
             android:textSize="24dp"
             android:textColor="#000000"
             android:textStyle="bold"
             android:layout_marginTop="7dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"

             />


         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/update"
             android:text="Update"
             android:textStyle="bold"
             android:background="@color/black"
             android:textColor="@color/white"
             android:textSize="24dp"
             android:layout_margin="10dp">

         </Button>






     </LinearLayout>

</ScrollView>